<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zero.plantoryprojectbe.auth.RefreshTokenMapper">

    <insert id="insertRefreshToken"
            parameterType="com.zero.plantoryprojectbe.auth.dto.RefreshTokenRequest"
            useGeneratedKeys="true"
            keyProperty="refreshTokenId">
        INSERT INTO refresh_token (
            member_id,
            refresh_token
        )
        VALUES (
                   #{memberId},
                   #{tokenHash}
               )
    </insert>

    <update id="updateRefreshToken"
            parameterType="com.zero.plantoryprojectbe.auth.dto.RefreshTokenRequest">
        UPDATE refresh_token
        SET refresh_token = #{tokenHash}
        WHERE member_id = #{memberId}
    </update>

    <select id="selectByMemberId"
            parameterType="long"
            resultType="com.zero.plantoryprojectbe.auth.dto.RefreshTokenRequest">
        SELECT
            refresh_token_id AS refreshTokenId,
            member_id        AS memberId,
            refresh_token       AS tokenHash
        FROM refresh_token
        WHERE member_id = #{memberId}
    </select>

    <select id="selectByTokenHash"
            parameterType="string"
            resultType="com.zero.plantoryprojectbe.auth.dto.RefreshTokenRequest">
        SELECT
            refresh_token_id AS refreshTokenId,
            member_id        AS memberId,
            refresh_token       AS tokenHash
        FROM refresh_token
        WHERE refresh_token = #{tokenHash}
    </select>

    <delete id="deleteByTokenHash"
            parameterType="string">
        DELETE FROM refresh_token
        WHERE refresh_token = #{tokenHash}
    </delete>

    <delete id="deleteByMemberId"
            parameterType="long">
        DELETE FROM refresh_token
        WHERE member_id = #{memberId}
    </delete>

</mapper>
